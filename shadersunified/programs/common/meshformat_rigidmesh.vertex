Texture2D texDiffuse;
SamplerState sampleDiffuse;

struct VS_INPUT
{
    float3 in_Position : POSITION;
    float3 in_Normal : NORMAL;
    float2 in_TexCoord0 : UV0;
    float2 in_TexCoord1 : UV1;
};

struct PS_INPUT
{
    float4 Pos : SV_POSITION;
    float2 Tex : TEXCOORD0;
};

//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
PS_INPUT VS( VS_INPUT input )
{
  PS_INPUT output = (PS_INPUT)0;
  
  output.Pos = float4(input.in_Position, 1.0);
  output.Tex = input.in_TexCoord0;
  return output;
}


//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 PS( PS_INPUT input ) : SV_Target
{
  
  return texDiffuse.Sample( sampleDiffuse, input.Tex );
}
